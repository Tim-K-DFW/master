%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/login', html: {class: 'sign_in'} do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = f.label 'Email Address'
            .row
              .col-sm-4
                = f.email_field :email, hide_label: :true
          .form-group
            = f.label 'Password'
            .row
              .col-sm-4
                = f.password_field :password, hide_label: :true
        %fieldset.form-group.action
          = f.submit 'Sign In', class: 'btn btn-default'
        = link_to 'Forgot password?', forgot_password_path
%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: #{@video.average_score}/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = render 'shared/error_display', faulty_object: @review if @review.errors.any?
      = form_for [@video, @review] do |f|
        %fieldset
          .form-group
            = f.label 'Rate this video'
            .row
              .col-sm-3
                = f.select :score, options_for_select([5, 4, 3, 2, 1].map { |num| [pluralize(num, 'Star'), num] }), class: 'form-control'
          .form-group
            = f.label 'Write Review'
            .row
              .col-sm-8
                = f.text_area :body, rows: 6, class: 'form-control'
        %fieldset.form-group.actions.clearfix
          = f.submit 'Submit', class: 'btn'
          = link_to 'Cancel', video_path(@video)
      %header
        %h3 User Reviews (#{@video.reviews.count})
      %ul
        - @video.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.score} / 5
                %p by <a href="">#{review.author.username}</a>
              .col-sm-8
                %p #{review.body}
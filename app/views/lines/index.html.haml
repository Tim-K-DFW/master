%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %form{:action => '/queue', :method => 'post'}
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue.each do |item|
                %tr
                  %td
                    = hidden_field_tag 'new_positions[][id]', item.id
                    = text_field_tag 'new_positions[][new_position]', item.priority, class: 'form-control'
                  %td
                    = link_to item.video.title, video_path(item.video)
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    %select.form-group(name="")
                      %option(value="5") 5 Stars
                      %option(value="4") 4 Stars
                      %option(value="3") 3 Stars
                      %option(value="2") 2 Stars
                      %option(value="1") 1 Star
                  %td
                    = link_to item.video.category.name, category_path(item.video.category)
                  %td
                    = link_to remove_queue_item_path(item), method: 'delete' do
                      %i.glyphicon.glyphicon-remove
          %button.btn.btn-default(type="submit") Update Instant Queue
%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f|
        %header
          %h1 Register
          = hidden_field_tag :invitation_token, @invitation.token if @invitation
        %fieldset
          = f.email_field :email, label: 'Email Address'
          = f.password_field :password
          = f.text_field :username, label: 'Full Name'
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['stripe_publishable_key']}" data-amount="999" data-name="MyFlix Registration Fee" data-description="Sign up for MyFlix membership")